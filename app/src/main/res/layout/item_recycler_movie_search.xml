<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/rl_search_movie_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_search_movie_poster"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_poster" />

        <TextView
            android:id="@+id/tv_search_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/iv_search_movie_poster"
            android:layout_toStartOf="@id/tv_search_movie_star"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="15dp"
            android:paddingTop="13dp"
            android:text="肖申克的救赎肖申克的救赎肖申克的救赎"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_search_movie_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="14dp"
            android:text="6.5"
            android:textColor="#623e3e" />


        <TextView
            android:id="@+id/tv_search_movie_directors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_search_movie_title"
            android:layout_below="@id/tv_search_movie_title"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="18dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="导演"
            android:textSize="12dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>