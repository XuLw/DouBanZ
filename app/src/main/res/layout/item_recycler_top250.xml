<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_movie_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:layout_marginBottom="4dp"
        android:background="#000"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_poster" />

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_movie_poster"
        android:layout_below="@+id/iv_movie_poster"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:text="TextView" />


    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_movie_title"
        android:layout_below="@+id/tv_movie_title"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_star_1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/star_full" />

        <ImageView
            android:id="@+id/iv_star_2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/star_full" />

        <ImageView
            android:id="@+id/iv_star_3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/star_full" />

        <ImageView
            android:id="@+id/iv_star_4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/star_full" />

        <ImageView
            android:id="@+id/iv_star_5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/star_full" />

        <TextView
            android:id="@+id/tv_movie_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="5.6" />

    </LinearLayout>


</RelativeLayout>